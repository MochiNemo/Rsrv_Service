<div class = "sign-container">
  <h3 class = "title">新しいアカウントを作成</h3>

  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class = "contents">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class = "entry-field">
        <ul>
          <li>
            <p class = "essential"></p>
            <%= f.text_field :name, :placeholder => "ユーザー名", autocomplete: "name" %>
          </li>
          <li>
            <p class = "essential"></p>
            <%= f.email_field :email, :placeholder => "メールアドレス", autocomplete: "email"%>
          </li>
          <li>
            <p class = "essential"></p>
            <%= f.password_field :password, :placeholder => "パスワード", autocomplete: "new-password" %>
          </li>
          <li>
            <p class = "essential"></p>
            <%= f.password_field :password_confirmation, :placeholder => "パスワード確認", autocomplete: "new-password" %>
          </li>
        </ul>
      </div>
      <div class = "move-link">
        <ul>
          <li><%= f.submit "新しいアカウントを作成", {class: "exe-btn"} %></li>
          <li><%= render "devise/shared/links" %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>